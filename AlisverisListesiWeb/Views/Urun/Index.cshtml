@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<AlisverisListesiWeb.Models.Urun>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>ÜRÜN LİSTESİ</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>KATEGORİ ADI</th>
            <th>GÜNCELLE</th>
            <th>SİL</th>
            
        </tr>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.UrunID</td>
            <td>@x.Ad</td>
            <td>@x.Fiyat</td>
            <td>@x.Stok</td>
            <td>@x.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunGetir/@x.UrunID" class="btn btn-success">GÜNCELLE</a>
            <td><a href="/Urun/UrunSil/@x.UrunID" class="btn btn-danger">SİL</a>
            

        </tr>
        }
    </table>
    @Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index", new {page}))
    <a href="/Urun/UrunEkle/" class="btn btn-primary">YENİ ÜRÜN</a>

